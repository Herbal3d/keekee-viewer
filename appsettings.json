{
    "KeeKeeViewer": {
        "AppTitle": "KeeKee Viewer",
        "AppVersion": "0.2.0",
        "AppName": "KeeKeeViewer"
    },
    "RestManager": {
        "Port": 9144,
        "BaseURL": "http://localhost",
        "UIContentDir": "./KeeKeeResources/UI",
        "CSSLocalUrl": "/std/KeeKee.css",
        "APIBase": "/api",
        "Skin": "Default"
    },
    "Comm": {
        "ShouldHoldChildren": true,
        "MultipleSims": false,
        "MovementUpdateInterval": 100,
        "ApplicationName": "KeeKee Viewer",
        "Version": "0.1.0"
    },
    "World": {
        "MaxObjectsPerRequest": 100,
        "ObjectRequestRetries": 3,
        "ObjectRequestRetryDelayMS": 500
    },
    "Assets": {
        "CacheDir": "",
        "EnableCaps": true,
        "MaxTextureRequests": 10,
        "OMVResources": "./KeeKeeResources/openmetaverse_data",
        "NoTextureFilename": "./KeeKeeResources/NoTexture.png",
        "NoKculptyFilename": "./KeeKeeResources/NoSculpty.png",
        "ConvertPNG": true
    },
    "LLAgent": {
        "SitCloseEnough": 1.5,
        "PreMoveAvatar": true,
        "PreMoveRotFudge": 3.0,
        "PreMoveFlyFudge": 2.5,
        "PreMoveRunFudge": 1.5,
        "PreMoveFudge": 0.4
    },
    "Renderer": {
        "RenderProvider": "OGL"
    },
    "RendererOGL": {
        "CamaraFar": 2048.0,       // camera far clip
        "GlobalAmbient": "<0.4,0.4,0.4>",
        "SunAmbient": "<0.4,0.4,0.4>",
        "SunSpecular": "<0.8,0.8,0.8>",
        "SunDiffuse": "<1.0,1.0,1.0>",
        "MoonAmbient": "<0.2,0.2,0.2>",
        "MoonSpecular": "<0.5,0.5,0.5>",
        "MoonDiffuse": "<0.5,0.5,0.5>",
        "AvatarColor": "<0.4,0.4,0.4>",    // Color of avatar shape
        "AvatarTransparancy": 0.6          // Transparacy of avatar shape
    },
    "KLogger": {
        "LogLevel":         "Debug",
        "RestDetail":       true,
        "WorkQueueDetail":  true,
        "UIDetail":         true,
        "DINIT":            true,
        "DINITDETAIL":      true,
        "DCOMM":            true,
        "DCOMMDETAIL":      true,
        "DWORLD":           true,
        "DWORLDDETAIL":     true,
        "DUPDATE":          true,
        "DUPDATEDETAIL":    true,
        "DTEXTURE":         true,
        "DTEXTUREDETAIL":   true,
        "DRENDER":          true,
        "DRENDERDETAIL":    true,
        "DVIEW":            true,
        "DVIEWDETAIL":      true
    },
    "Logging": {
        "LogLevel": {
            "Default": "Information"
        },
        "NLog": {
            "IncludeScopes": true,
            "RemoveLoggerFactoryFilter": true
        }   
    },
    "NLog": {
        "autoReload": true,
        "throwConfigExceptions": true,
        "internalLogLevel": "Warn",
        "internalLogFile": "logs/nlog-internal.log",
        "variables": {
            "var_logdir": "logs",
            "DefaultLayout": "${longdate}|${level:uppercase=true}|${logger}|${message}${onexception:inner=${newline}${exception:format=tostring}}",
            "DefaultMinLevel": "Info"
        },
        "targets": {
            "file": {
                "type": "File",
                "fileName": "${var_logdir}/log-${shortdate}.log",
                "layout": "${DefaultLayout}",
                "archiveFileName": "${var_logdir}/archives/log-{#}.log",
                "archiveNumbering": "Rolling",
                "maxArchiveFiles": 7,
                "archiveEvery": "Day",
                "keepFileOpen": false
            },
            "console": {
                "type": "Console",
                "layout": "${longdate}|${level:uppercase=true}|${logger}|${message}${onexception:inner=${newline}${exception:format=tostring}}"
            }
        },
        "rules": [
            {
                "logger": "*",
                "minLevel": "${DefaultMinLevel}",
                "writeTo": "file,console"
            }
        ]
    }
}

